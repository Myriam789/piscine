def read_one_line(filename: str) -> str:
    with open(filename, "r", encoding="utf-8") as file:
        line = file.readline()
    return line
filename = "partie1.py"
first_line = read_one_line(filename)
print(first_line)


def write_text(filename: str, text: str) -> None:
    with open(filename, "w", encoding="utf-8") as file:
        file.write(text)

write_text("exemple.py", " le Python")
with open("exemple.py", "r", encoding="utf-8") as f:
    print(f.read())


def copy_characters(input_file: str, output_file: str, nb: int):
    file_in = open(input_file, "r", encoding="utf-8")
    content = file_in.read(nb)



def read_all_lines(filename: str) -> (list[str], list[str]) :
    with open(filename) as f:
        lines = f.readlines()
        return lines, lines


def write_text_better(filename: str, text: str) :
    with open(filename, 'w') as f:
        f.write(text)
